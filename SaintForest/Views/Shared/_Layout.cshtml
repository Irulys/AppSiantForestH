<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .No {
            display:none;
        }
    </style>
</head>
<body>
     <style>
         * {
           margin:0;
         }

        .Fondo {
            width:100%;
            height: 700px;
            background-color:#19C6E1;
           position:relative;
            }

         .Menu {
         width:95%;
          background-color:#1A9A8ED;
           margin:0 auto; 
           margin-bottom:1%;
         }
         .Contexto {
            width:95%;
            position:relative;
            margin:0 auto; 
            background-color:#EDA8EC;
         }
         
       table{
           border:silver 1px solid;
        
       }
        td
        {
            border:silver 1px solid;
            padding:3px;
                
        }

         select {
             margin:3px;
             padding:3px;
         }
         input {
             margin:5px;
             padding:5px;
        
              }
        .display-field {
         margin:5px;
         padding:5px;
         font-family:'Segoe UI';
         font-size:0.99em;
         font-style:italic;
         font-weight:700;
         }

    </style>
    <div class="Fondo">
    <div class="Menu">
       @if (Request.IsAuthenticated)
        { 
        <strong>@Session["Rol"] : @Session["Nombre"]</strong>
           
           int IdRol=-1;
           
           try{
               IdRol = ((int)Session["IdRol"]);
           }catch( NullReferenceException err)
           {
                <script>
                    window.location.href = "../../Usuarios/LogOut";
               </script>
           }
            catch (InvalidCastException err)
            {
               <script>
                   window.location.href = "../../Usuarios/LogOut";
               </script>
            }
           
            if (IdRol == 0)
            {
                 <strong>
               
                || @Html.ActionLink("Gestion de Usuarios", "Index", "Usuarios")

                  || @Html.ActionLink("Gestion de Reservas", "Index", "Reservas")
                
                ||@Html.ActionLink("Gestion de Habitaciones", "Index", "Habitaciones")  

                ||@Html.ActionLink("Gestion de Facturas", "Index", "Facturas") 
                      
                ||@Html.ActionLink("Gestion de Pedidos", "Index", "Pedidos")  

                ||@Html.ActionLink("Gestion de Productos", "Index", "Productos")  
                

               </strong>
            }
            else if (IdRol == 1)
            {
                <strong>
                     ||@Html.ActionLink("Mis Facturas", "Index", "Facturas") 
                 || @Html.ActionLink("Mis Pedidos", "Index", "Pedidos") 
                    || @Html.ActionLink("Mis Reservas", "Index", "Reservas")
                  ||@Html.ActionLink("Habitaciones Disponibles", "Index", "Habitaciones")  
               
                 </strong>
           
            }
            else if (IdRol == 2)
            {
                <strong>
            @Html.ActionLink("Gestion deHabitaciones", "Index", "Habitaciones")  ||

                    </strong>
            }
            else if (IdRol == 3)
            {
           <strong>
               @Html.ActionLink("Gestion de Usuarios", "Index", "Usuarios")
             ||@Html.ActionLink("Gestion de Reservas", "Index", "Reservas")
             ||@Html.ActionLink("Gestion de Pedidos", "Index", "Pedidos")  
           </strong>
            } 
            @Html.ActionLink("Log Out", "Logout", "Usuarios")
        }
       else
       {
            
            @Html.ActionLink("Register", "Registrar", "Usuarios")
            <span>|</span>
            @Html.ActionLink("Log In", "LogIn", "Usuarios");
       }

    </div>
        <div class="Contexto">
            
         @RenderBody()

        </div>
   
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>