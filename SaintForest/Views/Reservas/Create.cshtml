@model SaintForest.Models.Reservas

@{
    ViewBag.Title = "Create";
}

     <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
     <script>
         $(function () {
             $("#datepicker").datepicker();
         });
  </script>
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Reservas</legend>
      
@*<p>Date: <input type="text" id="datepicker" /></p>*@
        <div class="editor-label">
            @Html.LabelFor(model => model.IdCliente, "Usuarios")
        </div>
        <div class="editor-field">
            @if (ViewBag.IsCliente)
            {
                @Session["Nombre"];
                <div class="No">
                             @Html.DropDownList("IdCliente", String.Empty)
           
                </div>
                     }
            else
            {

            @Html.DropDownList("IdCliente", String.Empty)
            }
            @Html.ValidationMessageFor(model => model.IdCliente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdHabitacion, "Habitaciones")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdHabitacion", String.Empty)
            @Html.ValidationMessageFor(model => model.IdHabitacion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaInical)
        </div>
        <div class="editor-field">
          <input class="text-box single-line" data-val="true" data-val-date="El campo FechaInical debe ser una fecha." data-val-required="El campo FechaInical es obligatorio." id="FechaInical" name="FechaInical" type="datetime-local" value="">
            @Html.ValidationMessageFor(model => model.FechaInical)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaFinal)
        </div>
        <div class="editor-field">
          <input class="text-box single-line" data-val="true" data-val-date="El campo FechaFinal debe ser una fecha." data-val-required="El campo FechaFinal es obligatorio." id="FechaFinal" name="FechaFinal" type="datetime-local" value="">
            @Html.ValidationMessageFor(model => model.FechaFinal)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
        <p>
 @ViewBag.PuedeReseravar</p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
